{
  "manifest_version": 3,
  "name": "WebPurifier",
  "version": "0.2.0",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/scanner.js",
        "content/applyBlur.js",
        "content/index.js"
      ],
      "css": ["content/content.css"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  }
}
